                        <th>Submitted</th>
                        <th>Completed</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <?php
                    $completed_query = "SELECT * FROM print_jobs 
                                     WHERE status = 'completed' AND stationery_id = ? 
                                     ORDER BY completed_at DESC LIMIT 10";
                    $stmt = $conn->prepare($completed_query);
                    $stmt->bind_param("i", $stationery_id);
                    $stmt->execute();
                    $completed_result = $stmt->get_result();
                    
                    if ($completed_result && $completed_result->num_rows > 0) {
                        while ($row = $completed_result->fetch_assoc()) {
                            echo '<tr>';
                            echo '<td>#' . htmlspecialchars($row['job_id']) . '</td>';
                            echo '<td>
                                    <div class="user-info">
                                        <div class="user-name">' . htmlspecialchars($row['user_name']) . '</div>
                                        <div class="user-meta">Phone: ' . htmlspecialchars($row['phone_number']) . '</div>
                                    </div>
                                  </td>';
                            
                            // Display either content preview or file link
                            if (!empty($row['content'])) {
                                $doc_name = "Document #" . $row['job_id'];
                                $preview_content = substr(strip_tags($row['content']), 0, 50) . '...';
                                echo '<td title="' . htmlspecialchars($preview_content) . '">' . $doc_name . '</td>';
                            } else {
                                $file_name = basename($row['file_path']);
                                echo '<td><a href="' . htmlspecialchars($row['file_path']) . '" target="_blank">' . $file_name . '</a></td>';
                            }
                            
                            echo '<td>
                                    <div class="request-details">
                                        <div><strong>Copies:</strong> ' . $row['copies'] . '</div>
                                        <div><strong>Type:</strong> ' . ucfirst($row['print_type']) . '</div>
                                    </div>
                                  </td>';
                            echo '<td>' . date('M d, Y h:i A', strtotime($row['created_at'])) . '</td>';
                            echo '<td>' . date('M d, Y h:i A', strtotime($row['completed_at'])) . '</td>';
                            echo '<td><span class="status-badge status-completed">Completed</span></td>';
                            
                            echo '<td>
                                    <div class="btn-group">
                                        <button class="action-btn btn-primary view-job" 
                                                data-id="' . $row['job_id'] . '" 
                                                data-content="' . htmlspecialchars($row['content'] ?? '') . '"
                                                data-file="' . htmlspecialchars($row['file_path'] ?? '') . '">
                                            <i class="fas fa-eye"></i> View
                                        </button>
                                        <form method="POST" action="reprint.php" style="display: inline;">
                                            <input type="hidden" name="job_id" value="' . $row['job_id'] . '">
                                            <button type="submit" class="action-btn btn-outline">
                                                <i class="fas fa-redo"></i> Re-print
                                            </button>
                                        </form>
                                    </div>
                                  </td>';
                            echo '</tr>';
                        }
                    } else {
                        echo '<tr><td colspan="8" style="text-align: center; padding: 2rem; color: var(--text-light);">No completed print jobs found for your station.</td></tr>';
                    }
                    $stmt->close();
                    ?>
                </tbody>
            </table>
        </div>

        <!-- Pagination for completed jobs -->
        <div class="pagination">
            <div class="pagination-info">
                Showing 1 to <?= min(10, $completed_result->num_rows) ?> of 
                <?php
                $count_query = "SELECT COUNT(*) as total FROM print_jobs 
                              WHERE status = 'completed' AND stationery_id = ?";
                $stmt = $conn->prepare($count_query);
                $stmt->bind_param("i", $stationery_id);
                $stmt->execute();
                $result = $stmt->get_result();
                echo $result->fetch_assoc()['total'];
                $stmt->close();
                ?> entries
            </div>
            <div class="pagination-controls">
                <button class="page-btn disabled">
                    <i class="fas fa-chevron-left"></i>
                </button>
                <button class="page-btn active">1</button>
                <button class="page-btn">2</button>
                <button class="page-btn">3</button>
                <button class="page-btn">4</button>
                <button class="page-btn">
                    <i class="fas fa-chevron-right"></i>
                </button>
            </div>
        </div>

        <!-- Job Preview Modal -->
        <div id="jobModal" class="modal">
            <div class="modal-content">
                <div class="modal-header">
                    <h3 class="modal-title">Job #<span id="modalJobId"></span> Preview</h3>
                    <button class="close-modal">&times;</button>
                </div>
                <div id="contentPreview" style="display: none;">
                    <div class="editor-area"><?php echo $row['content'] ?? ''; ?></div>
                </div>
                <iframe id="filePreview" class="document-preview" frameborder="0" style="display: none;"></iframe>
                <div class="modal-footer">
                    <button class="action-btn btn-outline close-modal">Close</button>
                    <form method="POST" id="completeForm" style="display: none;">
                        <input type="hidden" name="job_id" id="modalJobIdInput">
                        <input type="hidden" name="new_status" value="completed">
                        <button type="submit" name="update_status" class="action-btn btn-success">
                            <i class="fas fa-check"></i> Mark as Completed
                        </button>
                    </form>
                    <button class="action-btn btn-primary" id="printJob">
                        <i class="fas fa-print"></i> Print Job
                    </button>
                </div>
            </div>
        </div>
    </div>

<script>
        // Update the JavaScript to handle both content and file previews
        const modal = document.getElementById('jobModal');
        const viewButtons = document.querySelectorAll('.view-job');
        const closeModalButtons = document.querySelectorAll('.close-modal');
        const modalJobId = document.getElementById('modalJobId');
        const modalJobIdInput = document.getElementById('modalJobIdInput');
        const contentPreview = document.getElementById('contentPreview');
        const filePreview = document.getElementById('filePreview');
        const printButton = document.getElementById('printJob');
        const completeForm = document.getElementById('completeForm');

        // View job button click handler
        viewButtons.forEach(button => {
            button.addEventListener('click', function() {
                const jobId = this.getAttribute('data-id');
                const jobContent = this.getAttribute('data-content');
                const jobFile = this.getAttribute('data-file');
                
                modalJobId.textContent = jobId;
                modalJobIdInput.value = jobId;
                
                // Show appropriate preview based on content type
                if (jobContent && jobContent.trim() !== '') {
                    contentPreview.style.display = 'block';
                    filePreview.style.display = 'none';
                    contentPreview.querySelector('.editor-area').innerHTML = jobContent;
                } else if (jobFile && jobFile.trim() !== '') {
                    contentPreview.style.display = 'none';
                    filePreview.style.display = 'block';
                    filePreview.src = jobFile;
                } else {
                    contentPreview.style.display = 'block';
                    filePreview.style.display = 'none';
                    contentPreview.querySelector('.editor-area').innerHTML = '<p>No preview available</p>';
                }
                
                // Show/hide complete form based on current status
                const currentStatus = this.closest('tr').querySelector('.status-badge').textContent.toLowerCase();
                if (currentStatus === 'processing') {
                    completeForm.style.display = 'block';
                } else {
                    completeForm.style.display = 'none';
                }
                
                modal.classList.add('show');
            });
        });

        // Close modal button click handler
        closeModalButtons.forEach(button => {
            button.addEventListener('click', function() {
                modal.classList.remove('show');
                contentPreview.style.display = 'none';
                filePreview.style.display = 'none';
                filePreview.src = '';
            });
        });

        // Print button click handler
        printButton.addEventListener('click', function() {
            if (contentPreview.style.display === 'block') {
                // Print HTML content
                const printWindow = window.open('', '', 'width=800,height=600');
                printWindow.document.write('<html><head><title>Print Job</title>');
                printWindow.document.write('<style>body { font-family: Arial; margin: 20px; }</style>');
                printWindow.document.write('</head><body>');
                printWindow.document.write(contentPreview.querySelector('.editor-area').innerHTML);
                printWindow.document.write('</body></html>');
                printWindow.document.close();
                printWindow.focus();
                printWindow.print();
                printWindow.close();
            } else if (filePreview.style.display === 'block' && filePreview.src && filePreview.src !== 'about:blank') {
                // Print file
                filePreview.contentWindow.print();
            }
        });

        // Close modal when clicking outside the content
        modal.addEventListener('click', function(e) {
            if (e.target === modal) {
                modal.classList.remove('show');
                contentPreview.style.display = 'none';
                filePreview.style.display = 'none';
                filePreview.src = '';
            }
        });

        // Simple client-side search functionality
        document.getElementById('active-search').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#active-jobs-table tbody tr');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });

        document.getElementById('completed-search').addEventListener('input', function(e) {
            const searchTerm = e.target.value.toLowerCase();
            const rows = document.querySelectorAll('#completed-jobs-table tbody tr');
            
            rows.forEach(row => {
                const text = row.textContent.toLowerCase();
                row.style.display = text.includes(searchTerm) ? '' : 'none';
            });
        });
    </script>

<?php include 'footer.php'; ?>
