                <div class="value">
                    <?php
                    $today_query = "SELECT COUNT(*) as total FROM print_jobs 
                                  WHERE DATE(created_at) = CURDATE() AND stationery_id = ?";
                    $stmt = $conn->prepare($today_query);
                    $stmt->bind_param("i", $stationery_id);
                    $stmt->execute();
                    $result = $stmt->get_result();
                    echo $result->fetch_assoc()['total'];
