    <!-- Active Jobs (Pending + Processing) -->
        <div class="data-table-container" style="margin-bottom: 2rem;">
            <div class="table-header">
                <h3 class="table-title">Active Print Jobs</h3>
                <div class="table-actions">
                    <div class="search-box">
                        <i class="fas fa-search"></i>
                        <input type="text" id="active-search" placeholder="Search active jobs...">
                    </div>
                </div>
            </div>
            
            <table id="active-jobs-table">
                <thead>
                    <tr>
                        <th>Job ID</th>
                        <th>Customer</th>
                        <th>Document</th>
                        <th>Details</th>
                        <th>Submitted</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    <?php
                    $active_query = "SELECT * FROM print_jobs 
                                   WHERE status IN ('pending', 'processing') AND stationery_id = ? 
                                   ORDER BY 
                                     CASE WHEN status = 'processing' THEN 0 ELSE 1 END,
                                     created_at DESC";
                    $stmt = $conn->prepare($active_query);
                    $stmt->bind_param("i", $stationery_id);
                    $stmt->execute();
                    $active_result = $stmt->get_result();
                    
                    if ($active_result && $active_result->num_rows > 0) {
                        while ($row = $active_result->fetch_assoc()) {
                            $status_class = 'status-' . $row['status'];
                            $status_text = ucfirst($row['status']);
                            
                            echo '<tr>';
                            echo '<td>#' . htmlspecialchars($row['job_id']) . '</td>';
                            echo '<td>
                                    <div class="user-info">
                                        <div class="user-name">' . htmlspecialchars($row['user_name']) . '</div>
                                        <div class="user-meta">Phone: ' . htmlspecialchars($row['phone_number']) . '</div>
                                    </div>
                                  </td>';
                            
                            // Display either content preview or file link
                            if (!empty($row['content'])) {
                                $doc_name = "Document #" . $row['job_id'];
                                $preview_content = substr(strip_tags($row['content']), 0, 50) . '...';
                                echo '<td title="' . htmlspecialchars($preview_content) . '">' . $doc_name . '</td>';
                            } else {
                                $file_name = basename($row['file_path']);
                                echo '<td><a href="' . htmlspecialchars($row['file_path']) . '" target="_blank">' . $file_name . '</a></td>';
                            }
                            
                            echo '<td>
                                    <div class="request-details">
                                        <div><strong>Copies:</strong> ' . $row['copies'] . '</div>
                                        <div><strong>Type:</strong> ' . ucfirst($row['print_type']) . '</div>
                                        ' . (!empty($row['special_instructions']) ? '<div><strong>Notes:</strong> ' . htmlspecialchars($row['special_instructions']) . '</div>' : '') . '
                                    </div>
                                  </td>';
                            echo '<td>' . date('M d, Y h:i A', strtotime($row['created_at'])) . '</td>';
                            echo '<td><span class="status-badge ' . $status_class . '">' . $status_text . '</span></td>';
                            
                            echo '<td>
                                    <div class="btn-group">';
                            
                            // View button
                            echo '<button class="action-btn btn-primary view-job" 
                                        data-id="' . $row['job_id'] . '" 
                                        data-content="' . htmlspecialchars($row['content'] ?? '') . '"
                                        data-file="' . htmlspecialchars($row['file_path'] ?? '') . '">
                                    <i class="fas fa-eye"></i> View
                                </button>';
                            
                            // Status update buttons based on current status
                            if ($row['status'] == 'pending') {
                                echo '<form method="POST" style="display: inline;">
                                        <input type="hidden" name="job_id" value="' . $row['job_id'] . '">
                                        <input type="hidden" name="new_status" value="processing">
                                        <button type="submit" name="update_status" class="action-btn btn-success">
                                            <i class="fas fa-play"></i> Start
                                        </button>
                                    </form>';
                            } elseif ($row['status'] == 'processing') {
                                echo '<form method="POST" style="display: inline;">
                                        <input type="hidden" name="job_id" value="' . $row['job_id'] . '">
                                        <input type="hidden" name="new_status" value="completed">
                                        <button type="submit" name="update_status" class="action-btn btn-success">
                                            <i class="fas fa-check"></i> Complete
                                        </button>
                                    </form>';
                            }
                            
                            // Cancel button
                            echo '<form method="POST" style="display: inline;">
                                    <input type="hidden" name="job_id" value="' . $row['job_id'] . '">
                                    <input type="hidden" name="new_status" value="cancelled">
                                    <button type="submit" name="update_status" class="action-btn btn-outline">
                                        <i class="fas fa-times"></i> Cancel
                                    </button>
                                </form>';
                            
                            echo '</div></td>';
                            echo '</tr>';
                        }
                    } else {
                        echo '<tr><td colspan="7" style="text-align: center; padding: 2rem; color: var(--text-light);">No active print jobs found for your station.</td></tr>';
                    }
                    $stmt->close();
                    ?>
                </tbody>
            </table>
        </div>
    
    <!-- Completed Jobs -->
        <div class="data-table-container">
            <div class="table-header">
                <h3 class="table-title">Completed Print Jobs</h3>
                <div class="table-actions">
                    <div class="search-box">
