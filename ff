this is print_requests.php   <?php
session_start();
// Change this check to match what you set in admin_login.php
if (!isset($_SESSION['stationary_admin_id'])) {
    header('Location: ../admin/admin_login.php');
    exit();
}

include("../connection.php");

// Get the stationery ID of the logged-in admin
$stationery_id = $_SESSION['stationery_id'] ?? null;
if (!$stationery_id) {
    die("Stationery ID not found in session. Please log in again.");
}

// Handle print status update
if (isset($_POST['update_status'])) {
    $job_id = $_POST['job_id'];
    $new_status = $_POST['new_status'];
    
    // Verify the print job belongs to this station before updating
    $verify_query = "SELECT job_id FROM print_jobs WHERE job_id = ? AND stationery_id = ?";
    $stmt = $conn->prepare($verify_query);
    $stmt->bind_param("ii", $job_id, $stationery_id);
    $stmt->execute();
    $stmt->store_result();
    
    if ($stmt->num_rows > 0) {
        $allowed_statuses = ['pending', 'processing', 'completed', 'cancelled'];
        if (in_array($new_status, $allowed_statuses)) {
            $update_query = "UPDATE print_jobs SET status = ? WHERE job_id = ?";
            $stmt = $conn->prepare($update_query);
            $stmt->bind_param("si", $new_status, $job_id);
            $stmt->execute();
            
            // If marking as completed, set completion time
            if ($new_status == 'completed') {
                $update_time_query = "UPDATE print_jobs SET completed_at = NOW() WHERE job_id = ?";
                $stmt = $conn->prepare($update_time_query);
                $stmt->bind_param("i", $job_id);
                $stmt->execute();
            }
            
            // Redirect to avoid form resubmission
            header("Location: print_requests.php");
            exit();
        } else {
            die("Invalid status provided.");
        }
    } else {
        die("Unauthorized action: This print job doesn't belong to your station.");
    }
}
