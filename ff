                    <?php
                    $processing_query = "SELECT COUNT(*) as total FROM print_jobs 
                                      WHERE status = 'processing' AND stationery_id = ?";
                    $stmt = $conn->prepare($processing_query);
                    $stmt->bind_param("i", $stationery_id);
                    $stmt->execute();
                    $result = $stmt->get_result();
                    echo $result->fetch_assoc()['total'];
                    $stmt->close();
                    ?>
                </div>
